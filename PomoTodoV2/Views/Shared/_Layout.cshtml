<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PomoTodo</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <style>
        .navbar-nav .nav-link {
            position: relative;
            text-decoration: none; /* Remove underline padrão */
            color: #343a40; /* Cor padrão com o resto do site */
            transition: color 0.3s ease; /* Transição suave de cor */
            padding: 10px 15px; /* Define padding para os links */
        }

            .navbar-nav .nav-link:before {
                content: '';
                position: absolute;
                left: 50%;
                right: 50%;
                bottom: -5px; /* Ajuste a distância do sublinhado */
                height: 2px; /* Altura do sublinhado */
                background: #28a745; /* Cor do sublinhado */
                transition: all 0.3s ease; /* Transição suave para o sublinhado */
            }

            .navbar-nav .nav-link:hover {
                color: #28a745; /* Muda a cor do texto no hover */
            }

                .navbar-nav .nav-link:hover:before {
                    left: 0;
                    right: 0; /* Expande o sublinhado ao passar o mouse */
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow mb-3 rounded">
            <div class="container-fluid justify-content-center">
                <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">PomoTodo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Todo" asp-action="Index">Board</a>
                        </li>
                        <!-- Adicione mais itens aqui conforme necessário -->
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container text-center">
            &copy; 2024 - PomoTodo
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>